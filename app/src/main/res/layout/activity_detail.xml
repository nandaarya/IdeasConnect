<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_idea_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idea Title"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_margin="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Ide"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:textSize="16sp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_idea_title" />

        <TextView
            android:id="@+id/tv_idea_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur dui neque, rhoncus id pellentesque non, bibendum eget nulla. Nam condimentum in ex vitae ornare. Suspendisse quis feugiat dolor. Curabitur cursus diam ullamcorper felis maximus, ac euismod quam mattis. Vestibulum cursus fermentum urna, et faucibus enim auctor ac. Duis molestie lacus sed sem tincidunt imperdiet. Nunc eu sodales erat, vel blandit lacus. In dapibus posuere egestas. Quisque maximus ac quam vitae ornare. In pretium dolor lacus, nec sagittis arcu congue et. Sed orci ipsum, mollis ut lobortis vitae, finibus quis velit. Nulla et vehicula nibh. Nulla ac mauris risus. Sed tempus lectus at nisl placerat dapibus. Pellentesque a dui vehicula, semper mi id, volutpat lorem."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description_label" />

        <TextView
            android:id="@+id/tv_additional_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Tambahan"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:textSize="16sp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_idea_description" />

        <TextView
            android:id="@+id/tv_additional_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:text="Document Link: https://...... \n Demo Video Link: https://.... \n Deployment Plan link :.... \n etc"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_additional_label" />

        <TextView
            android:id="@+id/tv_developer_name_label"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="56dp"
            android:text="Developer"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_additional_detail"/>

        <TextView
            android:id="@+id/tv_developer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:text="Albert Einstein"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_developer_name_label" />

        <TextView
            android:id="@+id/tv_date_label"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="56dp"
            android:text="Tanggal Submit"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_developer_name"/>

        <TextView
            android:id="@+id/tv_submit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:text="15 Januari 2024"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_label" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:layout_marginHorizontal="8dp"
            android:text="Tawarkan Investasi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_submit_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>